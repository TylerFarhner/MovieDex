<!-- Made a new movies/index ejs, using the UL/LI formatting instead of Th/TB format to try to get ID working -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>MovieDex</title>
</head>
<body>
    <h1>Movies Index</h1>

    <nav>
        <a href="./movies/new">Add Movie</a>
        <a href="../">Home</a>
    </nav>

    <ul>
        <% movies.forEach(function(movie, idx) { %>
            <li>
                Title: <a href="/movies/<%= idx %>"><%= movie.title %></a> 
                <!-- bang bang, did the thang (now have clickable links) -->
                - 
                Released On: <%= movie.release %>
                
            </li>
        <% }); %>
    </ul>

</body>
</html>